.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
}

/* 内容 */
.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

/* 表头 */
.th {
  width: 40%;
  justify-content: center;
  background: #697db6;
  color: #fff;
  display: flex;
  height: 40px;
  align-items: center;
}

/**index.wxss**/
.slide_r {
  /* 获取板块高度 */
  height: 100px;
}

/* 绿色 */
.slideNav {
  margin: auto;
  width: 100%;
  height: 100%;
  overflow: auto;
  overflow-y: auto;
  background-color: aquamarine;
}

/* 米色 */
.slideNav_c {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: blanchedalmond;
}

/* 紫色*/
.categories {
  position: absolute;
  margin: auto;
  /* 获取每个td的宽 */
  width: 900rpx;
  line-height: 80rpx;
  white-space: nowrap;
  display: flex;
  background-color: rgb(208, 187, 230);
}

/* 拖动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

