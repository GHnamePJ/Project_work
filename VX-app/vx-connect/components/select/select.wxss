@import "/style/iconcss.wxss";
/* ---------------------------------------------- */
.calendar{
  padding: 5rpx;
  width: 60%;
  height: 7vh;
  margin: 10rpx 0 0 10rpx ;
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
  position: relative;
}

.left{
  width: 35%;
  height: 100%;
  position: relative;
}

.leftTitle{
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.leftTitle::after{
  content:"";
  width: 2rpx;
  height: 75%;
  position:absolute;
  top: 15%;
  right: 0;
  background-color: rgba(113, 127, 167,0.2);
}

.leftContent{
  background-color: rgb(255, 255, 255);
  padding: 0 10rpx;
  width:98%;
  position: absolute;
  border-radius: 10rpx;
  top: 90rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
}

@keyframes myfirst {
  from {
      height: 0rpx;
  }

  to {
      height: 180rpx;
  }
}

.leftItem{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
}

.right{
  width: 65%;
  height: 100%;

}
.minute{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.rightTitle_minute{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.rightTitle_minute_hour{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.SVrightContentMinuteHour{
  background-color: rgb(255, 255, 255);
  padding: 0 10rpx;
  width:20%;
  position: absolute;
  border-radius: 10rpx;
  top: 90rpx;
  right: 0;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
}

.hour{
  width: 100%;
  height: 100%;
}

.rightTitle_hour{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.day{
  width: 100%;
  height: 100%;
}

.rightTitle_day{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}