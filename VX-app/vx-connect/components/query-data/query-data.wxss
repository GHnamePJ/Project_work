/* components/query-data/query-data.wxss */
.query-container{
  width: 100%;
  height: 92vh;
}
/* top */
.top{
  height: 10vh;
  background-color: rgb(206, 231, 253);
}
/* mid */
.mid{
  height: 16vh;
  background-color: rgb(253, 242, 206);
}
.mid-content>view>view{
  display: inline-block;
}
/* bottom */
.bottom{
  height: 66vh;
  /* background-color: burlywood; */
}
.table{
  height: 58vh;
  /* background-color: rgb(156, 136, 136); */
  font-size: 14px;
}
/* 自定义表格 */
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 40px;
  align-items: center;
}
.td {
    /* width:40%; */
    width:60%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  /* width: 40%; */
  width: 60%;
  justify-content: center;
  background: #697db6;
  color: #fff;
  display: flex;
  height: 40px;
  align-items: center;
}
/* 自定义表格 */
.paging{
  display: flex;
  height: 8vh;
  width: 100%;
  flex-direction: row;
  /* background-color: cadetblue; */
}
.paging-top{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-evenly; 

}
.paging-bottom{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-evenly; 
}
