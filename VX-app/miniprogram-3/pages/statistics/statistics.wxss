}

/* 相关性最大最小 */
.extremum {
  width: 97%;
  margin-top: 20rpx;
  height: 25vh;
  /* background-color: rgba(150, 143, 243, 0.5); */
}

.extremum-content {
  width: 100%;
  height: 100%;
  /* background-color: rgba(168, 75, 75, 0.24); */
