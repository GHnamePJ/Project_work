  height: 40%;
  font-size: 38rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  /* background-color: rgba(223, 53, 53, 0.5); */
}
.dright{
  padding-right: 25rpx;
}
.condition-factor{
  width: 100%;
  flex: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* background-color: rgba(99, 124, 194, 0.5); */
}
.condition-factor-title{
  font-size: 38rpx;
}
.condition-factor-content{
width: 100%;
/* background-color: rgba(124, 18, 18, 0.24); */
}

.l-checkbox-group{
  display: flex;
  justify-content: center;
}

.checkbox{
  padding-bottom: 20rpx;
}

.condition-btn{
  width: 100%;
  flex: 0.8;
  display: flex;
  align-items: center;
  justify-content:space-around;
  /* background-color: rgba(43, 11, 11, 0.5); */

}


/* 内容 */
.content {
  width: 100%;
  /* height: 90vh; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.contentloading{
  width: 750rpx;
  height: 1100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading{
  width: 750rpx;
  height: 1100rpx;
  /* background-color: #666666; */
}

.loading-img{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
}

.loadingtext{
  margin-top: 50rpx;
  font-size: 40rpx;
  font-weight: 450;
  font-family: "幼圆";
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
 }

/* 图表 */
.chart {
  width: 97%;
  height: 45vh;
  margin-top: 20rpx;
  border-radius: 10rpx;
  box-shadow: rgba(59, 105, 222, 0.4) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
  /* box-shadow: rgba(59, 105, 222, 0.4) 0px 3px 8px; */
  /* position: relative; */
  /* background-color: rgba(240, 216, 196, 0.5); */
}

.check {
  position: relative;
  top: 0;
  width: 100%;
  height: 17%;
  /* background-color: rgba(214, 240, 196, 0.5); */
  display: flex;
  flex-direction: row;

}

.empty {
  flex: 1;
  /* background-color: rgba(219, 167, 180, 0.5); */
}

.factor {
  flex: 2;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  color: #666666;
  /* background-color: rgba(134, 67, 84, 0.5); */
}

.type {
  flex: 1.5;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  /* background-color: rgba(102, 44, 58, 0.5); */
}

/* 图表切换  */
.typecard {
  width: 80%;
  height: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #666666;
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
  /* border: 2rpx solid rgba(0, 0, 0, 0.42);   */
}

.bar,
.line {
  flex: 1;
  height: 100%;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}

.clicktypeBar {
  width: 100%;
  border-radius: 20rpx 0 0 20rpx;
  color: white;
  background-color: rgba(58, 104, 202, 0.54)
}



.clicktypeLine {
  width: 100%;
  border-radius: 0 20rpx 20rpx 0;
  color: white;
  background-color: rgba(57, 99, 188, 0.54);
}

.bar::after {
  content: "";
  width: 4rpx;
  height: 75%;
  position: absolute;
  top: 15%;
  right: 0;
  background-color: rgba(70, 75, 94, 0.7);
}

/* 因素 */
.factorcard {
  width: 95%;
  height: 60%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
  /* border: 2rpx solid rgba(0, 0, 0, 0.42);    */
}

.left {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  position: relative;
  /* background-color: rgba(85, 29, 29, 0.12); */
}

.left::after {
  content: "";
  width: 4rpx;
  height: 50%;
  position: absolute;
  top: 30%;
  right: 0;
  background-color: rgba(93, 95, 104, 0.5);
}

.right {
  flex: 2;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  /* background-color: rgba(224, 51, 51, 0.12); */
}

.rightContent {
  background-color: rgb(255, 255, 255);
  padding: 10rpx;
  position: absolute;
  border-radius: 10rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
  box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px;
}

.rightItem {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
}

