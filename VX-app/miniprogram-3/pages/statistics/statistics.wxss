  align-items: center;
  justify-content: space-between;
  /* background-color: rgba(204, 240, 196, 0.5); */
}

.statisticsBtn {
  width: 45%;
  padding-left: 2%;
}

.l-button-statistics {
  width: 100%;
}

.statisticsTitle {
  font-size: 35rpx;
}

.changeStations {
  width: 50%;
}

.changeStationBtn {
  width: 100%;
}
/* 统计条件查询 */
.popup{
  width: 100vw;
  height: 100vh;
}

.condition{
  width: 80vw;
  height: 55vh;
  padding: 20rpx;
  border-radius: 20rpx;
  color: #666666;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.condition-title{
  width: 100%;
  flex: 0.5;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: rgba(146, 121, 121, 0.5); */
}
.tongjiicon{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.condition-data{
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  /* background-color: rgba(223, 53, 53, 0.5); */
}
/* 分割线 */
.hr{
  width: 100%;
  height: 2rpx;
  background-color: rgba(121, 113, 113, 0.55);
}
.start,.end{
