/* pages/teabar/teabar.wxss */
.container{
  width: 100%;
  /* height: 600px; */
  background: url("https://img-shop.qmimg.cn/s16/images/2020/04/27/7ba54456f16f48df.jpeg") no-repeat;
  background-size: 100% auto;
}
.content_container{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.content_one{
  display: flex;
  width: 90%;
  height: 210px;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
  margin-top: 240px;
  margin-bottom: 15px;
  background: white;
  border-radius: 4px;
}
.one1{
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  width: 90%;
  height: 35px;
  color: gray;
  font-size: 12px;
  margin-bottom: 2px;
}
.one1>text:first-child{
  font-size: 16px;
  color: red;
}
.one2{
  width: 90%;
  height: 20px;
}
.one3{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 90%;
  height: 40px;
}
.one3>text{
  font-size: 12px;
  color: red;
}
.one4{
  position: relative;
  display: flex;
  width: 90%;
  height: 56px;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}
.one4>image{
  width: 88%;
}
.one4>text{
  position: absolute;
  top: 12px;
  color: rgb(236, 74, 74);
}
.content_two{
  display: flex;
  width: 90%;
  height: 90px;
  position: relative;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-radius: 4px;
  margin-bottom: 20px;
}
.two_image{
  position: absolute;
  width: 130px;
  top: -8px;
}
.two_left,.two_right{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  color: red;
}
.left_text2{
  font-size: 12px;
  color: gray;
}
/* 画线 */
.two_left:after {
  content: "";
  position: absolute;
  width: 1.5px;
  height: 20px;
  background: gray;
  top: 0;
  right: -34px;
  bottom: 0;
  margin: auto;
}

.content_three{
  width: 90%;
  height: 140px;
  margin-bottom: 4px;
}
.content_three>image{
  width: 100%;
}