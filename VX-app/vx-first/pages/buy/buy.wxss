/* pages/buy/buy.wxss */
.container{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 100%;
}
.content{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.content_two{
  justify-content: space-between;
  width: 90%;
  margin-top: 5px;
}
.two_top{
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}
.two_top>text:first-child{
  font-size: 14px;
}
.two_top>text:nth-child(2){
  font-size: 10px;
  color:#ADB838;
}
.two_bottom{
  margin-bottom: 5px;
}
.two_bottom>text{
  font-size: 10px;
  color: gray;
}
.content_three{
  display: flex;
  width: 90%;
  flex-direction: column;
}
.quan{
  width: 100%;
  margin-bottom: 10px;
  background: white;
}
.quan_top{
  display: flex;
  padding: 5px 10px;
}
.quan_top>image{
  width: 64px;
}
.top_right{
  width: 200px;
  margin-left: 15px;
}
.top_right>view:first-child{
  display: flex;
  justify-content: flex-end;
  margin-right: 0px;
  font-size: 16px;
  color: #919293;
}
.top_right>view:nth-child(2){
  font-size: 17px;
  width: 80% !important;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.top_right>view:nth-child(3){
  font-size: 10px;
  color: #919293;
}
.quan_bottom{
  display: flex;
  height: 30px;
  justify-content: space-between;
  align-items: center;
  padding: 2px 10px;
  font-size: 10px;
}
.quan_bottom>view:nth-child(2){
  color: #ADB838;
}
.content_four{
  display: flex;
  width: 90%;
  height: 45px;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 8px;
  background: rgb(173, 184, 64);
  border-radius: 45px;
  color: white;
  font-size: 14px;
}
.content_five{
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 300px;
  font-size: 10px;
  color: #919293;
}
.content_five>view:first-child{
  font-size: 15px;
  color: black;
  margin-bottom: 10px;
}
.content_five>view:nth-child(2){
  font-size: 12px;
  color: rgb(48, 56, 58);
  margin-bottom: 10px;
}



