/* pages/login/login.wxss */

.logo{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 190px;
}
.logo_ico{
  width: 70px;
  height: 70px;
}
.text{
  height: 100px;
}
.text>text{
  display: block;
  font-size: 12px;
  color: rgb(132, 143, 146);
  text-align: center;
  margin-bottom: 10px;

}
.login_btn{
  display: flex;
  justify-content: center;
}

.btn_login{
  height: 46px;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 25px;
  background: #adb838;
}
.login_ico{
  width: 15px;
  height: 15px;
  margin-right: 5px;
}
.btn_login>text{
  font-size: 12px;
  color: white;
}
.text1{
  display: block;
  height: 40px;
  font-size: 12px;
  color: rgb(132, 143, 146);
  margin-top: 25px;
  text-align: center;
}
.images{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 60px;
}
.image_text{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 58px;
}
.image_text>image{
  width: 30px;
  height: 30px;
}
.image_text>text{
  margin-top: 8px;
  font-size: 10px;
  color: rgb(132, 143, 146);
}
.text2{
  display: block;
  height: 50px;
  font-size: 13px;
  color: #adb838;
  text-align: center;
  line-height: 50px;
}